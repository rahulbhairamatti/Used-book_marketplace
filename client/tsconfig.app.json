{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc", // You can keep this or change if needed, not critical for JS
      "forceConsistentCasingInFileNames": true,
      "strict": false,           // IMPORTANT: Set strict to false for JavaScript projects
      "noImplicitOverride": true,
      "noPropertyAccessFromIndexSignature": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,  // IMPORTANT: Ensure experimentalDecorators is true
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "ES2022",          // Or "es2020", "es2019", etc. - modern ES version
      "module": "es2020",          // Or "esnext" - modern ES module system
      "lib": [
        "es2022",                 // Match target ES version
        "dom"
      ],
       "allowJs": true,           // IMPORTANT:  allowJs: true - to allow JavaScript files
       "checkJs": false          // IMPORTANT:  checkJs: false - to disable TypeScript checking of JS (optional, can be true or false)
    },
    "angularCompilerOptions": {
      "enableI18nLegacyMessageIdFormat": false,
      "strictInjectionParameters": false,
      "fullTemplateTypeCheck": false,
      "strictTemplates": false
    }
  }
  